
    <div class="@Class" data-tabs-content="@LinkId">
        @ChildContent
    </div>

@code {
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    /// <summary>
    /// Id of the TabHeader.
    /// </summary>
    [Parameter]
    public string LinkId { get; set; }

    /// <summary>
    /// Custom Class to Append at the end of default Foundation Class (eg. "accordion custom").
    /// </summary>
    [Parameter]
    public string Class { get; set; }

    /// <summary>
    /// Unique HTML Identifier.
    /// </summary>
    [Parameter]
    public string Id { get; set; }


    protected override async Task OnInitializedAsync()
    {
        if (Class != null)
        {
            Class = "tabs-content " + Class;
        }
        else
        {
            Class = "tabs-content";
        }

    }
}

