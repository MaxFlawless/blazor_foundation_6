@using Plugins.CSS;
@inject IStyleManagement StyleManagement;
<style>
    :root {
        --body-font-color: @(StyleManagement.Get("BodyFontColor"));
        --body-color: @(StyleManagement.Get("BodyColor"));
        --header-font-color: @(StyleManagement.Get("HeaderFontColor"));
        --header-color: @(StyleManagement.Get("HeaderColor"));
        --primary-color: @(StyleManagement.Get("PrimaryColor"));
        --primary-color-disabled: @(StyleManagement.Get("PrimaryColorDisabled"));
        --secondary-color: @(StyleManagement.Get("SecondaryColor"));
        --secondary-color-disable: @(StyleManagement.Get("SecondaryColorDisabled"));
        --alert-color: @(StyleManagement.Get("AlertColor"));
        --alert-color-disabled: @(StyleManagement.Get("AlertColorDisabled"));
        --success-color: @(StyleManagement.Get("SuccessColor"));
        --success-color-disabled: @(StyleManagement.Get("SuccessColorDisabled"));
        --warning-color: @(StyleManagement.Get("WarningColor"));
        --warning-color-disabled: @(StyleManagement.Get("WarningColorDisabled"));
        --topbar-font-color: @(StyleManagement.Get("TopBarFontColor"));
        --topbar-color: @(StyleManagement.Get("TopBarColor"));
        --control-color: @(StyleManagement.Get("ControlColor"));
        --control-color-hover: @(StyleManagement.Get("ControlColorHover"));
        --ms-panel-bg: @(StyleManagement.Get("MSPanelBg"));
        --ms-panel-close-color: @(StyleManagement.Get("MSPanelCloseColor"));
    }
</style>



